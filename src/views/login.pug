extends base

block content
  form(method="POST")
    if errorMessage
      span=errorMessage
    input(placeholder="Username", type="text", name="username", required)
    input(placeholder="Password", type="password", name="password", required)
    input(type="submit", value="Log In")
  hr
  span
    | Don't have an account? 
    a(href="/join") Join now!