doctype html
html(lang="ko")
  head
    title #{title} | #{siteName}
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      nav 
        ul 
          li
            a(href="/") Home
          li
            a(href="/search") Search
          
          if loggedIn
            li
              a(href="/logout") Logout
            li
              a(href="/video/upload") Upload
            li
              a(href="/user/edit") Edit Profile
            li
              a(href=`/user/${loggedInUser._id}`) My Profile
          else
            li
              a(href="/login") Login          
      h1=title
    main
      block content
    include partials/footer 